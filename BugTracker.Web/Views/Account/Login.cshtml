@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="row m-b-20">
        <div class="col-md-12">
            <h6 class="text-danger text-center">@Html.Raw(ViewBag.ErrorMessage)</h6>
        </div>
    </div>
}
<div class="container mt-5" style="width:30%">
    <h2 class="mb-4">Login</h2>
    <form asp-action="Login" asp-controller="Account" method="post" asp-antiforgery="true">
        <div class="form-group mb-3">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="Email">
        </div>
        <div class="form-group mb-3">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <div class="mt-3">
        <span>click here to <a asp-controller="Account" asp-action="Register" class="link-primary">Register</a> if you don't have account.</span>
    </div>
</div>